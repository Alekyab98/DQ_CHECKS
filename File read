def create_txt_files_from_csv(input_csv, output_txt):
    try:
        with open(input_csv, 'r', encoding='utf-8') as csv_file, open(output_txt, 'w') as txt_file:
            reader = csv.DictReader(csv_file)
            for row in reader:
                # Extract grafana_expression and view_column_name
                expression = row['grafana_expression'].strip()
                column_name = row['view_column_name'].strip()
                # Write to the .txt file in the expected format
                txt_file.write(f"{column_name} | {expression}\n")
        print(f"TXT file created: {output_txt}")
    except Exception as e:
        print(f"Error processing file {input_csv}: {e}")
